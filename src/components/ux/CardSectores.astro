---
const { title, body, image } = Astro.props;
---

<div class="flex items-center gap-6">
  <img src={image} alt="" />
  <div>
    <h3 class="font-bold text-xl text-[var(--primary-color)]">{title}</h3>
    <p class="text-sm">
      {body}
    </p>
  </div>
</div>
<style>
  img {
    animation-name: show;
    animation-timeline: --image;
    animation-range: entry 25% cover 80%;
    animation-fill-mode: both;
    view-timeline-axis: block;
    view-timeline-name: --image;
  }
  @keyframes show {
    from {
      opacity: 0;
      scale: 25%;
    }
    to {
      opacity: 1;
      scale: 100%;
    }
  }
</style>
